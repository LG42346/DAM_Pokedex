<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/pokemonScrollView"
    android:gravity="center"
    android:padding="16dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/detailLinearLayout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/pokemonNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/pokemonImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="@string/pokemons" />

        <TextView
            android:id="@+id/pokemonDescriptionTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginTop="8dp" />

        <GridLayout
            android:id="@+id/grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="2"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/title_height"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/pokemonHeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:background="@drawable/rounded_corners" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="@string/title_weight"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp" />
            <TextView
                android:id="@+id/pokemonWeightTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:background="@drawable/rounded_corners" />
        </GridLayout>

        <TextView
            android:id="@+id/pokemonTypesTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="0sp"
            android:background="@drawable/rounded_corners" />

    </LinearLayout>
</ScrollView>